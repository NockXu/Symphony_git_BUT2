{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4">
                <h1 class="mt-4">Liste d'articles</h1>
                <ol class="breadcrumb mb-4">
                    <li class="breadcrumb-item"><a href="index.html">Article</a></li>
                    <li class="breadcrumb-item active">liste</li>
                </ol>
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
                {% for article in articles %}
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="card" style="width: 300px;">
                            <div class="card-body">
                                <img src="{{ asset('uploads/images/' ~ article.image) }}" class="card-img-top" alt="{{article.image}}">
                                <h5 class="card-title">nÂ°{{article.id}} {{article.titre}}</h5>
                                <p class="card-text">{{article.texte}}</p>
                                <p>{{ article.date ? article.date|date('d-m-Y') : 'Pas de date' }}</p>
                                <a href="{{path('app_article_update', {'id': article.id})}}" class="btn btn-primary" style="background-color : blue;">Modifier</a>
                                <a href="{{path('app_article_delete', {'id': article.id})}}" class="btn btn-primary" style="background-color : red;">Supprimer</a>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </main>
    </div>
    </div>

{% endblock %}